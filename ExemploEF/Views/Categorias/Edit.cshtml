@model ExemploEF.Models.Categoria

@{
    ViewData["Title"] = "Editar Categoria";
}

<div class="container mt-5 p-4" style="background-color: #ffffff; border-radius: 15px; box-shadow: 0 0 15px #ffd700;">
    <h1 class="mb-4" style="text-shadow: 0 0 10px #ffd700; color: #000;">Editar Categoria</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Edit" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                <input type="hidden" asp-for="CategoriaId" />

                <div class="mb-3">
                    <label asp-for="Nome" class="form-label" style="color: #000; font-weight: bold;">Nome</label>
                    <input asp-for="Nome" class="form-control" style="box-shadow: 0 0 10px #ffd700;" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-primary btn-lg" style="box-shadow: 0 0 10px #0000ff;">Salvar</button>
                    <a asp-action="Index" class="btn btn-secondary btn-lg" style="box-shadow: 0 0 10px #6c757d;">Voltar para a Lista</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
