@model ExemploEF.Models.Cliente

@{
    ViewData["Title"] = "Editar Cliente";
}

<div class="container mt-5 p-4" style="background-color: #ffffff; border-radius: 15px; box-shadow: 0 0 15px #ffd700;">
    <h1 class="mb-4" style="color: #000; text-shadow: 0 0 10px #ffd700;">Editar Cliente</h1>
    <h4 style="color: #ffd700;">Cliente</h4>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Edit" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                <input type="hidden" asp-for="ClienteID" />

                <div class="mb-4">
                    <label asp-for="Nome" class="form-label" style="color: #000; font-weight: bold;">Nome</label>
                    <input asp-for="Nome" class="form-control" style="border: 2px solid #ffd700; box-shadow: 0 0 10px #ffd700;" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Nascimento" class="form-label" style="color: #000; font-weight: bold;">Data de Nascimento</label>
                    <input asp-for="Nascimento" class="form-control" type="datetime-local" style="border: 2px solid #ffd700; box-shadow: 0 0 10px #ffd700;" />
                    <span asp-validation-for="Nascimento" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-lg" style="color: #ffffff; background-color: #ffd700; border: none; text-shadow: 0 0 10px #ffd700;">
                        Salvar
                    </button>
                    <a asp-action="Index" class="btn btn-lg" style="color: #ffffff; background-color: #6c757d; border: none; text-shadow: 0 0 10px #6c757d;">
                        Voltar para a Lista
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
